@model IEnumerable<CLRegras.Funcionario>

@{
    ViewBag.Title = "Funcionário";
}

<h2>Funcionário</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nome")
        </th>
        <th>
            @Html.DisplayName("Sexo")
        </th>
        <th>
            @Html.DisplayName("CPF")
        </th>
        <th>
            @Html.DisplayName("RG")
        </th>
        <th>
            @Html.DisplayName("Data de Nascimento")
        </th>
        <th>
            @Html.DisplayName("Grupo Sanguíneo")
        </th>
        <th>
            @Html.DisplayName("Formação")
        </th>
        <th>
            @Html.DisplayName("Grau de Escolaridade")
        </th>
        <th>
            @Html.DisplayName("Área de Atuação")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sexo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cpf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataDeNascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.grupoSanguineo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.formacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.grauDeEscolaridade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.areaDeAtuacao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
