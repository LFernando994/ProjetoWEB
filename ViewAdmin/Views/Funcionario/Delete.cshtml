    <h4>Funcionario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            Sexo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sexo)
        </dd>

        <dt>
            CPF:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cpf)
        </dd>

        <dt>
            RG:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rg)
        </dd>

        <dt>
            Data de Nascimento:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dataDeNascimento)
        </dd>

        <dt>
            Grupo Sanguíneo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.grupoSanguineo)
        </dd>

        <dt>
            Formação Academica:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.formacao)
        </dd>

        <dt>
            Grau de Escolaridade:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.grauDeEscolaridade)
        </dd>

        <dt>
            Área de Atuação:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.areaDeAtuacao)
        </dd>

        <dt>
            Quantidade de Chamados:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.quantidadeChamados)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
     }
</div>
