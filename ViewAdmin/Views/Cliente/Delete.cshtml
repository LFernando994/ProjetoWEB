@model CLRegras.Cliente

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Tem certeza que deseja deletar esse Cliente?</h3>
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            Sexo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sexo)
        </dd>

        <dt>
            CPF:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cpf)
        </dd>

        <dt>
            RG:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rg)
        </dd>

        <dt>
            Data de Nascimento:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dataDeNascimento)
        </dd>

        <dt>
            Grupo Sanguíneo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.grupoSanguineo)
        </dd>

        <dt>
            Data de Expiração:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dataDeExpiracao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> &bull;
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
