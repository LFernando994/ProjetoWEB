@model CLRegras.Chamado

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes</h2>

<div>
    <h4>Chamado</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Descrição")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descricao)
        </dd>

        <dt>
            @Html.DisplayName("Data da Solicitação")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dataDeSolicitacao)
        </dd>

    </dl>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <img src="@Model.Imagem" class="img-thumbnail" />
    </div>
</div>
<p>

    @Html.ActionLink("Detalhes do Cliente", "Details", "dbCliente", new { id = Model.idCliente}, null) |
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Voltar", "IndexChamados", new { id = Model.idFuncionario })
</p>
