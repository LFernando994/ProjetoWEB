<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/imgs/favicon.ico" type="image/x-icon" />

    <title>@ViewBag.Title - LFSSistemas</title>
    @using Microsoft.AspNet.Identity

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://www.google.com/recaptcha/api.js"></script>

</head>
<body>
    @{
        ViewBag.id = User.Identity.GetUserId();
    }


    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("LFSSistemas", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <img src="~/imgs/8.png" height="40" width="40" style="margin:5px" class="rounded-circle">
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Início", "Index", "Home")</li>
                    @*<li>@Html.ActionLink("Produtos", "Product", "Home")</li>*@

                    @if (Request.IsAuthenticated)
                    {
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Chamados <span class="caret"></span></a>
                            <ul class="dropdown-menu" style="background-color:#5bbfdb;">

                                <li>@Html.ActionLink("Abrir chamado", "Create", "dbChamado")</li>
                                <li>@Html.ActionLink("Acompanhamento", "Index", "dbChamado")</li>

                            </ul>
                        </li>
                    }
                    <li>@Html.ActionLink("Quem Somos", "About", "Home")</li>
                    <li>@Html.ActionLink("Fale Conosco", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Parcerias", "Partnership", "Home")</li>

                </ul>
                <ul class="nav navbar-nav navbar-right">

                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align: center;">&copy; @DateTime.Now.Year - Todos os Direitos Reservados</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/inputmask")
    @RenderSection("scripts", required: false)
    @{Html.RenderPartial("~/Views/Shared/_Mensagem.cshtml");}

</body>
</html>
